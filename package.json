{
  "name": "@vladimir-ks/aigile",
  "version": "0.1.0",
  "description": "JIRA-compatible Agile project management CLI for AI-assisted development",
  "keywords": [
    "aigile",
    "agile",
    "jira",
    "project-management",
    "cli",
    "typescript",
    "claude-code",
    "ai-development"
  ],
  "author": {
    "name": "Vladimir K.S.",
    "email": "vlad@vladks.com",
    "url": "https://github.com/vladimir-ks"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vladimir-ks/aigile.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "aigile": "dist/bin/aigile.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "types",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint --ext .ts,.js src/",
    "lint:fix": "eslint --ext .ts,.js src/ --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "sql.js": "^1.12.0",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
